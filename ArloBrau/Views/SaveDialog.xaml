<Window x:Class="ArloBrau.Views.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Salvar o jogo" Height="230" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Nome do Save:" Margin="10"/>
            <TextBox x:Name="SaveNameTextBox" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Salvar" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancelar" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="ConfirmCancelTextBlock" Text="Você tem certeza que deseja cancelar? Clique novamente em 'Cancelar' se deseja continuar mesmo assim." Visibility="Collapsed" Foreground="Red" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
